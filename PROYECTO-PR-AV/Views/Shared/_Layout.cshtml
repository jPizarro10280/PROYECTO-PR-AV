<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FideFit</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>


    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-info">
        <div class="container">

            <nav class="navbar bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">
                        <img src="~/Assets/img/ff.jpg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                      FideFit
                    </a>
                </div>
            </nav>


            <div class="nav " style="
                 font-size:25px; 
                 font-color:white;">

                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })

                @Html.ActionLink("Productos", "About", "Home", new { area = "" }, new { @class = "nav-link" })

                @Html.ActionLink("Contáctanos", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })

            </div>

            <div style="font-size:25px;">
                
                @Html.ActionLink("Carrito", "VerCarrito", "Producto", new { area = "" }, new { @class = "nav-link" })
                @Html.Partial("_LoginPartial")

            </div>
        </div>
        
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>TODOS LOS DERECHOS RESERVADOS - UNIVERSIDAD FIDÉLITAS&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
